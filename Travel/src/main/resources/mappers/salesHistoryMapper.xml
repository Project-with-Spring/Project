<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.Travel.mapper.SalesHistoryMapper">
	
	<select id="getListCount" resultType="int">
		SELECT COUNT(ord_id) FROM orders
	</select>
	
	<select id="getList" parameterType="pageBean" resultType="ordersBean">
		SELECT * FROM orders ord JOIN staff stf ON ord.stf_id = stf.stf_id LIMIT #{startRow},#{pageSize}
	</select>
	
</mapper>